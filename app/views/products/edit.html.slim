- content_for(:title, 'Редактировать товар')

.flex.justify-between.items-center.mb-8
  h1.font-semibold.text-2xl.leading-10.tracking-norma = content_for(:title)

= render 'form'
= link_to 'Назад', products_path, class: 'block mb-4'
= button_to 'Удалить', product_url(@product), method: :delete, class: 'btn bg-red-400!',
        data: { controller: 'confirm', confirm: 'Вы уверены что хотите удалить данный товар?' }